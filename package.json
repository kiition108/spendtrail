{
  "name": "spendtrail",
  "version": "1.0.0",
  "description": "location based transaction tracking system",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "start": "node --experimental-json-modules src/index.js",
    "dev": "nodemon -r dotenv/config --experimental-json-modules src/index.js",
    "gmail:setup": "node -r dotenv/config gmailSetup.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "test:location": "node testLocationSystem.js",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "security:audit": "npm audit",
    "security:check": "npm audit && eslint src/**/*.js",
    "load:test": "artillery run artillery-load-test.yml",
    "load:test:simple": "artillery run artillery-simple-test.yml",
    "load:test:quick": "artillery quick --count 10 --num 5 http://localhost:5000/api/v1/health",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop ecosystem.config.js",
    "pm2:restart": "pm2 restart ecosystem.config.js",
    "pm2:logs": "pm2 logs spendtrail-api",
    "pm2:monit": "pm2 monit"
  },
  "repository": {
    "type": "git",
    "url": "spendtrail-backend"
  },
  "keywords": [
    "javascript",
    "backend"
  ],
  "author": "Kishan Singh",
  "license": "ISC",
  "dependencies": {
    "@sentry/node": "^10.32.1",
    "@sentry/profiling-node": "^10.32.1",
    "bcryptjs": "^3.0.2",
    "compression": "^1.8.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^7.5.0",
    "googleapis": "^170.0.0",
    "hpp": "^0.2.3",
    "html-to-text": "^9.0.5",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.30.1",
    "moment-timezone": "^0.6.0",
    "mongoose": "^8.15.1",
    "node-fetch": "^3.3.2",
    "resend": "^6.7.0",
    "uuid": "^13.0.0",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "eslint": "^9.39.2",
    "eslint-plugin-security": "^3.0.1",
    "helmet": "^8.1.0",
    "nodemon": "^3.1.11"
  }
}
